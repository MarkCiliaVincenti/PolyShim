<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">

  <Target Name="PolyShim_ResolveFeatures" AfterTargets="AfterResolveReferences">
    <PropertyGroup>
      <IsNetStandard>false</IsNetStandard>
      <IsNetStandard Condition="'$(TargetFrameworkIdentifier)' == '.NETStandard'">true</IsNetStandard>

      <IsNetCoreApp>false</IsNetCoreApp>
      <IsNetCoreApp Condition="'$(TargetFrameworkIdentifier)' == '.NETCoreApp'">true</IsNetCoreApp>

      <IsNetFramework>false</IsNetFramework>
      <IsNetFramework Condition="'$(TargetFrameworkIdentifier)' == '.NETFramework'">true</IsNetFramework>
    </PropertyGroup>

    <!-- Identify feature compatibility -->
    <PropertyGroup>
      <FeatureAsyncInterfaces>false</FeatureAsyncInterfaces>
      <FeatureAsyncInterfaces Condition="@(PackageDependencies->AnyHaveMetadataValue('Identity', 'Microsoft.Bcl.AsyncInterfaces'))">true</FeatureAsyncInterfaces>
      <FeatureAsyncInterfaces Condition="$(IsNetStandard) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '2.1'))">true</FeatureAsyncInterfaces>
      <FeatureAsyncInterfaces Condition="$(IsNetCoreApp) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '3.0'))">true</FeatureAsyncInterfaces>
      <DefineConstants Condition="$(FeatureAsyncInterfaces)">$(DefineConstants);FEATURE_ASYNCINTERFACES</DefineConstants>

      <FeatureHttp>false</FeatureHttp>
      <FeatureHttp Condition="@(Reference->AnyHaveMetadataValue('Identity', 'System.Net.Http'))">true</FeatureHttp>
      <FeatureHttp Condition="@(PackageDependencies->AnyHaveMetadataValue('Identity', 'System.Net.Http'))">true</FeatureHttp>
      <FeatureHttp Condition="@(PackageDependencies->AnyHaveMetadataValue('Identity', 'Microsoft.Net.Http'))">true</FeatureHttp>
      <FeatureHttp Condition="$(IsNetStandard) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '1.1'))">true</FeatureHttp>
      <FeatureHttp Condition="$(IsNetCoreApp) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '1.0'))">true</FeatureHttp>
      <DefineConstants Condition="$(FeatureHttp)">$(DefineConstants);FEATURE_HTTP</DefineConstants>

      <FeatureManagement>false</FeatureManagement>
      <FeatureManagement Condition="@(Reference->AnyHaveMetadataValue('Identity', 'System.Management'))">true</FeatureManagement>
      <FeatureManagement Condition="@(PackageDependencies->AnyHaveMetadataValue('Identity', 'System.Management'))">true</FeatureManagement>
      <DefineConstants Condition="$(FeatureManagement)">$(DefineConstants);FEATURE_MANAGEMENT</DefineConstants>

      <FeatureMemory>false</FeatureMemory>
      <FeatureMemory Condition="@(PackageDependencies->AnyHaveMetadataValue('Identity', 'System.Memory'))">true</FeatureMemory>
      <FeatureMemory Condition="$(IsNetStandard) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '2.1'))">true</FeatureMemory>
      <FeatureMemory Condition="$(IsNetCoreApp) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '2.1'))">true</FeatureMemory>
      <DefineConstants Condition="$(FeatureMemory)">$(DefineConstants);FEATURE_MEMORY</DefineConstants>

      <FeatureProcess>false</FeatureProcess>
      <FeatureProcess Condition="@(Reference->AnyHaveMetadataValue('Identity', 'System.Diagnostics.Process'))">true</FeatureProcess>
      <FeatureProcess Condition="$(IsNetStandard) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '2.0'))">true</FeatureProcess>
      <FeatureProcess Condition="$(IsNetCoreApp) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '1.0'))">true</FeatureProcess>
      <FeatureProcess Condition="$(IsNetFramework) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '2.0'))">true</FeatureProcess>
      <DefineConstants Condition="$(FeatureProcess)">$(DefineConstants);FEATURE_PROCESS</DefineConstants>

      <FeatureTask>false</FeatureTask>
      <FeatureTask Condition="@(PackageDependencies->AnyHaveMetadataValue('Identity', 'System.Threading.Tasks'))">true</FeatureTask>
      <FeatureTask Condition="@(PackageDependencies->AnyHaveMetadataValue('Identity', 'Microsoft.Bcl.Async'))">true</FeatureTask>
      <FeatureTask Condition="$(IsNetStandard) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '1.0'))">true</FeatureTask>
      <FeatureTask Condition="$(IsNetCoreApp) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '1.0'))">true</FeatureTask>
      <FeatureTask Condition="$(IsNetFramework) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '4.5'))">true</FeatureTask>
      <DefineConstants Condition="$(FeatureTask)">$(DefineConstants);FEATURE_TASK</DefineConstants>

      <FeatureValueTask>false</FeatureValueTask>
      <FeatureValueTask Condition="@(PackageDependencies->AnyHaveMetadataValue('Identity', 'System.Threading.Tasks.Extensions'))">true</FeatureValueTask>
      <FeatureValueTask Condition="$(IsNetStandard) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '2.0'))">true</FeatureValueTask>
      <FeatureValueTask Condition="$(IsNetCoreApp) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '2.1'))">true</FeatureValueTask>
      <DefineConstants Condition="$(FeatureValueTask)">$(DefineConstants);FEATURE_VALUETASK</DefineConstants>

      <FeatureValueTuple>false</FeatureValueTuple>
      <FeatureValueTuple Condition="@(PackageDependencies->AnyHaveMetadataValue('Identity', 'System.ValueTuple'))">true</FeatureValueTuple>
      <FeatureValueTuple Condition="$(IsNetStandard) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '2.0'))">true</FeatureValueTuple>
      <FeatureValueTuple Condition="$(IsNetCoreApp) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '2.0'))">true</FeatureValueTuple>
      <FeatureValueTuple Condition="$(IsNetFramework) AND $([MSBuild]::VersionGreaterThanOrEquals($(TargetFrameworkVersion), '4.7'))">true</FeatureValueTuple>
      <DefineConstants Condition="$(FeatureValueTuple)">$(DefineConstants);FEATURE_VALUETUPLE</DefineConstants>
    </PropertyGroup>
  </Target>

</Project>